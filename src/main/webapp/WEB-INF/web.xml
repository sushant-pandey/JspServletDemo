  <servlet-mapping>
  	<servlet-name>AddOneLaptopController</servlet-name>
  	<url-pattern>/addOneLaptop</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Videos</servlet-name>
  	<url-pattern>/videos</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
